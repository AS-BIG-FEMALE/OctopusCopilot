{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "subscriptionId": {
            "value": "#{Octopus.Action.Azure.SubscriptionId}"
        },
        "name": {
            "value": "octopus-copilot-#{Octopus.Environment.Name | ToLower | Replace \"[^A-Za-z0-9]\" \"_\"}"
        },
        "location": {
            "value": "East US"
        },
        "ftpsState": {
            "value": "FtpsOnly"
        },
        "storageAccountName": {
            "value": "octopuscopilot#{Octopus.Environment.Name | ToLower | Replace \"[^A-Za-z0-9]\" \"_\"}"
        },
        "use32BitWorkerProcess": {
            "value": false
        },
        "linuxFxVersion": {
            "value": "DOCKER|docker.io/octopussamples/octopuscopilot"
        },
        "environmentName": {
            "value": "managedEnvironment-OctopusCopilot-#{Octopus.Environment.Name | ToLower | Replace \"[^A-Za-z0-9]\" \"_\"}"
        },
        "workspaceName": {
            "value": "workspaceoctopuscopilot-#{Octopus.Environment.Name | ToLower | Replace \"[^A-Za-z0-9]\" \"_\"}"
        },
        "workspaceLocation": {
            "value": "eastus"
        },
        "managedEnvironmentId": {
            "value": "/subscriptions/#{Octopus.Action.Azure.SubscriptionId}/resourceGroups/OctopusCopilot/providers/Microsoft.App/managedEnvironments/managedEnvironment-OctopusCopilot-#{Octopus.Environment.Name | ToLower | Replace \"[^A-Za-z0-9]\" \"_\"}"
        }
    }
}